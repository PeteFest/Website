@model PeteFest.Web.Models.Festival.MapModel

@{
    ViewBag.Title = "Map";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="directions">
        <h1 class="text-center">@Model.Name</h1>
</section>
<section id="map" class="add-padding">
    <div id="gmap">
    </div>
</section>

<script src="http://maps.google.com/maps/api/js?sensor=true"></script>
<script>
        var mapPoint = {
            'lat': '@Model.Latitude',
            'lng': '@Model.Longitude',
            'zoom': @Model.Zoom,
            'infoText' : '@Html.Raw(Model.HtmlFormattedAddress)',
            'linkText': 'View on Google Maps',
            'mapAddress': '@Model.FormattedAddress',
            'icon': '../assets/images/pin-dark.png'
        };
</script>
