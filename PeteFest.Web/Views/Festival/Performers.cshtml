@model IEnumerable<PeteFest.Web.Models.Festival.ActModel>

@{
    ViewBag.Title = "WhatsOn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="whatson">
    <h1 class="big-text text-center scrollimation fade-in">Performers</h1>
    <div class="masonry-wrapper">
        <div id="projects-container">

            @foreach (var act in Model)
            {  
                <article class="project-item logo masonry-brick">
                    <div>
                        <img class="img-responsive" src="@Url.Action("GetImage", "Festival", new {@id = act.PictureId})" alt="" style="margin: auto" />

                        <div class="hover-mask" data-toggle="modal" data-target="#@act.PictureId-modal">
                            <h2 class="project-title">@act.Name</h2>
                        </div>
                    </div>
                </article>
                <div class="modal fade" id="@act.PictureId-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h3 class="modal-title" id="myModalLabel">@act.Name</h3>
                            </div>
                            <div class="modal-body">
                                <p class="lead">@act.BiogParagraph</p>
                                <p class="lead">@act.BiogParagraph2</p>
                                <p class="lead">@act.BiogParagraph3</p>   
                                @if (!string.IsNullOrEmpty(act.WebsiteLink))
                                {
                                    <br/>
                                    <a href="@act.WebsiteLink">Website</a>
                                }
                                @if (!string.IsNullOrEmpty(act.SoundCloudLink))
                                {
                                    <br />
                                    <a href="@act.SoundCloudLink">SoundCloud</a>
                                }
                                
                                @if (!string.IsNullOrEmpty(act.YouTubeLink))
                                {
                                    <br />
                                    <a href="@act.YouTubeLink">YouTube</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
